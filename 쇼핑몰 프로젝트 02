#include <stdio.h>

int main() {
    int n; 
    scanf("%d", &n);

    int in[100], out[100], stock[100];
    int i;


    for (i = 0; i < n; i++) {
        scanf("%1d", &in[i]);
    }

   
    for (i = 0; i < n; i++) {
        scanf("%1d", &out[i]);
    }

    
    int total_stock = 0;
    for (i = 0; i < n; i++) {
        stock[i] = in[i] - out[i];
        total_stock += stock[i];
    }

   
    int total_out = 0;
    for (i = 0; i < n; i++) total_out += out[i];

   
    int total_in = 0;
    for (i = 0; i < n; i++) total_in += in[i];

    double ratio = 0;
    if (total_in > 0) {
        ratio = (double)total_out / total_in * 100;
    }

    int max_idx = 0, min_idx = 0;
    for (i = 1; i < n; i++) {
        if (out[i] > out[max_idx])
            max_idx = i;
        if (out[i] < out[min_idx])
            min_idx = i;
    }

    
    printf("재고수량: %d\n", total_stock);
    printf("총 판매량: %d(판매율 %.2f%%)\n", total_out, ratio);
    printf("가장 많이 판매된 상품: ID %d, 판매량 %d\n", max_idx + 1, out[max_idx]);
    printf("가장 적게 판매된 상품: ID %d, 판매량 %d\n", min_idx + 1, out[min_idx]);

    for (i = 0; i < n; i++) {
        if (stock[i] <= 2) {
            printf("상품 ID %d : 재고부족(%d)\n", i + 1, stock[i]);
        }
    }

    return 0;
}
